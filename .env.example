# Stellar SEP (configurar según tu stellar.toml / anchor)
NEXT_PUBLIC_FEDERATION_SERVER_URL=https://federation.example.com
NEXT_PUBLIC_AUTH_SERVER_URL=https://auth.example.com
NEXT_PUBLIC_TRANSFER_SERVER_URL=https://transfer.example.com

# Trustless Work - Escrow
NEXT_PUBLIC_TRUSTLESS_WORK_API_URL=https://api.trustlesswork.com
TRUSTLESS_WORK_API_KEY=

# Red Stellar para la wallet (testnet | futurenet | mainnet)
# Usa futurenet para tokenizar on-chain (contrato desplegado en Futurenet)
NEXT_PUBLIC_STELLAR_NETWORK=futurenet
NEXT_PUBLIC_SOROBAN_RPC_URL=https://rpc-futurenet.stellar.org

# Tokenización on-chain (Futurenet) — para que el backend invoque mint() al tokenizar
# Desplegar contrato: ver contracts/README.md
SOROBAN_RPC_URL=https://rpc-futurenet.stellar.org
SOROBAN_NETWORK_PASSPHRASE="Test SDF Future Network ; October 2022"
FARO_INVOICE_TOKEN_CONTRACT_ID=CCOVMYGLDUGHXGUOPFY3ZLHC3JO6BL2CO3JG6YLAGP5LJQWRWDSEXJSC
# Secret key de la cuenta admin (la que puede llamar mint); solo en backend, nunca en front
FARO_TOKEN_ADMIN_SECRET_KEY=
